{
    "name": "marcel/symfony-api-starter",
    "description": "Internal Symfony API starter template",
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.3",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "api-platform/doctrine-orm": "^4.2.8",
        "api-platform/symfony": "^4.2.8",
        "doctrine/dbal": "^3.10.4",
        "doctrine/doctrine-bundle": "^2.18.1",
        "doctrine/doctrine-migrations-bundle": "^3.7",
        "doctrine/orm": "^3.5.8",
        "nelmio/cors-bundle": "^2.6",
        "phpdocumentor/reflection-docblock": "^5.6.5",
        "phpstan/phpdoc-parser": "^2.3",
        "sentry/sentry-symfony": "^5.8",
        "symfony/asset": "7.4.*",
        "symfony/console": "7.4.*",
        "symfony/dotenv": "7.4.*",
        "symfony/expression-language": "7.4.*",
        "symfony/flex": "^2.10",
        "symfony/framework-bundle": "7.4.*",
        "symfony/http-client": "7.4.*",
        "symfony/maker-bundle": "^1.65.1",
        "symfony/monolog-bundle": "^3.11",
        "symfony/mailer": "7.4.*",
        "symfony/object-mapper": "7.4.*",
        "symfony/property-access": "7.4.*",
        "symfony/property-info": "7.4.*",
        "symfony/rate-limiter": "7.4.*",
        "symfony/runtime": "7.4.*",
        "symfony/security-bundle": "7.4.*",
        "symfony/serializer": "7.4.*",
        "symfony/twig-bundle": "7.4.*",
        "symfony/uid": "7.4.*",
        "symfony/validator": "7.4.*",
        "symfony/yaml": "7.4.*"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true,
            "phpro/grumphp": true,
            "optimize-autoloader": true
        },
        "bump-after-update": true,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php82": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "check-all": [
            "make lint",
            "make test"
        ],
        "lint": [
            "make lint"
        ],
        "fix": [
            "make fix"
        ],
        "analyse": [
            "make lint"
        ],
        "changelog": [
            "php bin/console app:changelog:generate"
        ],
        "test": [
            "make test"
        ],
        "release:prepare": [
            "composer changelog",
            "php bin/console app:release:finalize --version=${VERSION:-v0.0.0}"
        ],
        "release:tag": [
            "php bin/console app:release:tag --version=${VERSION:-v0.0.0}"
        ],
        "release": [
            "composer release:prepare",
            "composer release:tag"
        ],
        "release:publish": [
            "composer release:prepare",
            "git checkout main",
            "git merge --ff-only develop",
            "php bin/console app:release:tag --version=${VERSION:-v0.0.0}",
            "git push origin main",
            "git push origin ${VERSION:-v0.0.0}",
            "git checkout develop"
        ],
        "prepare": [
            "composer install --no-interaction",
            "make lint"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "7.4.*",
            "docker": true
        }
    },
    "require-dev": {
        "doctrine/doctrine-fixtures-bundle": "^4.3",
        "fakerphp/faker": "^1.24.1",
        "phpro/grumphp": "^2.17",
        "phpstan/phpstan": "^2.1.32",
        "phpunit/phpunit": "^12.4.5",
        "rector/rector": "^2.2.11",
        "symfony/browser-kit": "7.4.*",
        "symfony/css-selector": "7.4.*",
        "symplify/easy-coding-standard": "^12.6.2"
    }
}
