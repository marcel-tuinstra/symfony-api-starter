{
    "realm": "symfony",
    "enabled": true,
    "attributes": {
        "access.token.lifespan": "43200",
        "sso.session.idle.timeout": "43200",
        "sso.session.max.lifespan": "86400",
        "client.session.idle.timeout": "43200",
        "client.session.max.lifespan": "86400",
        "offline.session.idle.timeout": "2592000",
        "offline.session.max.lifespan": "5184000"
    },
    "clients": [
        {
            "clientId": "symfony-api",
            "rootUrl": "http://localhost:8080",
            "redirectUris": ["http://localhost:8080/*"],
            "publicClient": true,
            "standardFlowEnabled": true,
            "directAccessGrantsEnabled": true,
            "protocol": "openid-connect",
            "defaultClientScopes": ["web-origins", "role_list", "profile", "email"],
            "optionalClientScopes": ["address", "phone", "offline_access"]
        }
    ],
    "roles": {
        "realm": [
            { "name": "ROLE_USER" },
            { "name": "ROLE_ADMIN" }
        ]
    },
    "users": [
        {
            "username": "admin",
            "enabled": true,
            "emailVerified": true,
            "firstName": "Admin",
            "lastName": "User",
            "email": "admin@example.com",
            "credentials": [
                { "type": "password", "value": "admin", "temporary": false }
            ],
            "realmRoles": ["ROLE_ADMIN"]
        }
    ]
}
